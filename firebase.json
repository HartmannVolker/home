{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "sameorigin"
          },
           {
            "key": "Content-Security-Policy",
            "value": "script-src 'self'"
          },
           {
            "key": "Feature-Policy",
            "value": "fullscreen 'self'"
          }
        ]
      }
    ]
  }
}
